<div class="jumbotron">

<h1 style="color:#428DC8">Other Stack</h1>

<div class="table-responsive">

<table class="table">
  <thead>
    <tr>
      <th>Purchase Date</th>
      <th>Quantity</th>
      <th>Name/Series</th>
      <th>Weight (ozt)</th>
      <th>Purchase Price</th>
      <th>Spot at Purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @others.each do |other| %>
      <tr>
        <td><%= other.dateOfPurchase %></td>
        <td><%= other.quantity %></td>
        <td><%= other.name %></td>
        <td><%= other.silverContent %></td>
        <td>$ <%= other.purchasePrice %></td>
        <td>$ <%= other.spotAtPurchase %></td>
        <td><%= link_to 'Info', other %></td>
        <td><%= link_to 'Edit', edit_other_path(other) %></td>
        <td><%= link_to 'Remove', other, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<% if current_user %>
  <%= link_to 'Add Items(s) to Stack', new_other_path %>
<% end %>

</div>
