<div class="jumbotron">

<h1>Coin Stack</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Dateofpurchase</th>
      <th>Silvercontent</th>
      <th>Mintyear</th>
      <th>Purchaseprice</th>
      <th>Spotatpurchase</th>
      <th>Country</th>
      <th>Condition</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.quantity %></td>
        <td><%= coin.name %></td>
        <td><%= coin.dateOfPurchase %></td>
        <td><%= coin.silverContent %></td>
        <td><%= coin.mintYear %></td>
        <td><%= coin.purchasePrice %></td>
        <td><%= coin.spotAtPurchase %></td>
        <td><%= coin.country %></td>
        <td><%= coin.condition %></td>
        <td><%= coin.comments %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>

</div>
